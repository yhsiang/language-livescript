'.source.livescript':
  editor:
    commentStart: '# '
    nonWordCharacters: '/\\"\':,.;<>~!@#%^&*|+=[]{}()`?-â€¦'
    increaseIndentPattern: """
      (?x)
      (
          (?<![\\w$_.]|[\\w$_]-) class \\s+   # class declarations
        | (?<![\\w$_.]|[\\w$_]-) (?:try|new|then|else|finally|do|let|return|loop|default
          |export|for\\sever|typeof\\!?|delete\\!?|import(?:\\sall)) \\s* $             # direct indent
        | (?<![\\w$_.]|[\\w$_]-) (?:function|if|until|for|while|case) (?:(?!then).)+ $  # then...
        | ^ \\s* \\*             # list asterisks
        | .* [\\{\\[\\(] \\s* $  # braces
        | .* [=:] \\s* $         # assignments
        | .* [-~]> \\s* $        # functions
      )"""
    decreaseIndentPattern: '^\\s*(\\}|\\]|else|catch|finally)$'
